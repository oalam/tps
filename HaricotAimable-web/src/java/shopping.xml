<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    

    <package name="shopping" namespace="/shopping" extends="struts-default">
        
        <action name="category" class="shopping.Category">
            <result>/shopping/category.jsp</result>
        </action>
       
        <action name="addToCart">
            <result type="redirectAction">category</result>
        </action>
       
        <action name="viewCart">
            <result>/shopping/cart.jsp</result>
        </action>
        
        <action name="updateCart"  >
            <result type="redirectAction">viewCart</result>
        </action>

        <action name="checkout" class="shopping.Checkout">
            <result>/shopping/checkout.jsp</result>
        </action>
        
        <action name="purchase" class="shopping.Checkout">
            <result name="success">/shopping/confirmation.jsp</result>
        </action>
        
        <action name="welcome" >
            <result>/shopping/index.jsp</result>
        </action>
    </package>
    

    
</struts>

