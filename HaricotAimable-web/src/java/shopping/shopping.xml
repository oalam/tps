<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    

    <package name="shopping" namespace="/shopping" extends="struts-default">
        
        
        <action name="welcome" class="shopping.CategoryAction">
            <result>/shopping/index.jsp</result>
        </action>
        
        <action name="category" class="shopping.CategoryAction">
            <result>/shopping/category.jsp</result>
            <!--            <result name="input">/shopping/category.jsp</result>-->
        </action>
       
       
       
       
       
       
       
       
       
        <action name="addToCart" class="shopping.CartAction">
           <result type="redirectAction">
                <param name="selectedCat">${selectedCat}</param>
                <param name="actionName">category</param>
                
            </result>
        </action>
       
        <action name="viewCart" class="shopping.CartAction">
            <result>/shopping/cart.jsp</result>
        </action>
        
        <action name="updateCart" class="shopping.CartAction" >
            <result type="redirectAction">
                <param name="selectedCat">${selectedCat}</param>
                <param name="actionName">viewCart</param>
                
            </result>
        </action>




        <action name="checkout" class="shopping.Checkout">
            <result>/shopping/checkout.jsp</result>
        </action>
        
        <action name="placeOrder" class="shopping.Checkout">
            <result name="success">/shopping/confirmation.jsp</result>
            <result name="error">/shopping/error.jsp</result>
        </action>
        

    </package>
    

    
</struts>

